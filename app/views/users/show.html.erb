<!-- app/views/users/show.html.erb -->
<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">User Profile</h1>

  <div class="bg-white shadow p-6 rounded">
    <h2 class="text-lg font-semibold mb-2">Details</h2>
    <p><strong>Name:</strong> <%= @user.first_name %> <%= @user.last_name %></p>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Role:</strong> <%= @user.role.titleize %></p>
    <p class="mt-4">
      <strong>Account Type:</strong>
      <% if @user.consultant_role %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
          <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          Consultant
        </span>
      <% else %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
          <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Client
        </span>
      <% end %>
    </p>
  </div>

  <div class="mt-4">
    <%= link_to 'Edit Profile', edit_user_registration_path, class: 'bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded' %>
    <%= link_to 'View Meetings', user_meetings_path(@user), class: 'bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded' %>
  </div>
</div>