<body class="bg-gray-100 text-gray-800 font-sans min-h-screen flex flex-col">
  <!-- Main Content -->
  <main class="flex-grow container mx-auto px-4 py-6">
    <div class="content-layout max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-6 animate-fade-in">
      <h1 id="page-title" class="content__title text-3xl font-bold text-gray-800 mb-6 border-b-2 border-gray-200 pb-2">Profile Page</h1>
      <div class="content__body">
        
        <div class="profile-grid grid grid-cols-1 gap-6">
          <div class="profile__header bg-gray-50 p-6 rounded-lg shadow-inner">
            <div class="profile__headline text-center">
              <h2 class="text-2xl font-semibold text-gray-700 mb-2">User Information</h2>
              <div class="profile__description text-gray-600">
                <% if @user.name.present? %>
                  <p><strong>Name:</strong> <%= @user.name %></p>
                <% else %>
                  <p><strong>Name:</strong> Not provided</p>
                <% end %>
                <p><strong>Email:</strong> <%= @user.email %></p>
              </div>
            </div>
          </div>
          
          <!-- Full-width centered actions container -->
          <div class="w-full flex justify-center">
            <div class="bg-gray-50 p-4 rounded-lg shadow-inner w-full max-w-md">
              <h3 class="text-lg font-medium text-gray-700 mb-4 text-center">Actions</h3>
              <div class="space-y-4">
                <%= link_to 'Edit Profile', edit_user_registration_path, class: 'block w-full text-center bg-blue-600 text-white py-2 px-4 rounded-lg btn-hover hover:bg-blue-700 transition duration-200' %>
                <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'block w-full text-center bg-red-600 text-white py-2 px-4 rounded-lg btn-hover hover:bg-red-700 transition duration-200', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </main>
</body>