<body class="bg-gray-100 text-gray-800 font-sans min-h-screen flex flex-col">
  <!-- Main Content -->
  <main class="flex-grow container mx-auto px-4 py-6">
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-6 animate-fade-in">
      <h1 class="text-3xl font-bold text-gray-800 mb-6 border-b-2 border-gray-200 pb-2">Your Profile</h1>

      <div class="grid grid-cols-1 gap-6">
        <!-- User Info -->
        <div class="bg-gray-50 p-6 rounded-lg shadow-inner">
          <h2 class="text-2xl font-semibold text-gray-700 mb-4 text-center">User Information</h2>
          <div class="text-gray-600 space-y-2">
            <p><strong>Name:</strong> <%= @user.full_name.present? ? @user.full_name : 'Not provided' %></p>            <p><strong>Email:</strong> <%= @user.email %></p>
            <p><strong>Role:</strong> <%= @user.role.capitalize %></p>
          </div>
        </div>

        <!-- Actions -->
        <div class="w-full flex justify-center">
          <div class="bg-gray-50 p-6 rounded-lg shadow-inner w-full max-w-md">
            <h3 class="text-lg font-medium text-gray-700 mb-4 text-center">Actions</h3>
            <div class="space-y-4">
              <%= link_to 'Edit Profile', edit_user_registration_path, class: 'block w-full text-center bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200' %>
              <%= link_to 'View Meetings', user_meetings_path(@user), class: 'block w-full text-center bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition duration-200' %>
              <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'block w-full text-center bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition duration-200' %>
            </div>
          </div>
        </div>
      </div>

      <!-- Flash Messages -->
      <div class="mt-6">
        <% if notice %>
          <p class="text-green-600 font-medium"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="text-red-600 font-medium"><%= alert %></p>
        <% end %>
      </div>
    </div>
  </main>
</body>
