<h1 class="text-2xl font-bold mb-4">Your Meetings</h1>
<%= link_to 'New Meeting', new_user_meeting_path(@user), class: 'bg-blue-500 text-white px-4 py-2 rounded mb-4 inline-block' %>
<%= month_calendar(events: @meetings) do |date, meetings| %>
  <%= date %>
  <% meetings.each do |meeting| %>
    <div class="text-sm text-blue-600">
      <%= meeting.start_time.strftime('%H:%M') %> (<%= meeting.status %>)
    </div>
  <% end %>
<% end %>