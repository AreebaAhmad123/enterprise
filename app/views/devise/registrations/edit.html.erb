<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Edit Your Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="field">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="mt-2 text-sm text-yellow-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
    </div>

    <!-- Password Field -->
    <div class="field">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="relative">
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" %>
        <span class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm text-gray-500">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.1.9-2 2-2s2 .9 2 2-2 4-2 4m-4-4c0-1.1-.9-2-2-2s-2 .9-2 2 2 4 2 4m4 4H8m4-8V3m0 18v-3"></path>
          </svg>
        </span>
      </div>
      <p class="mt-1 text-sm text-gray-500 italic">Leave blank if you don't want to change it</p>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500"><em>Minimum <%= @minimum_password_length %> characters</em></p>
      <% end %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="field">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="relative">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" %>
        <span class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm text-gray-500">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.1.9-2 2-2s2 .9 2 2-2 4-2 4m-4-4c0-1.1-.9-2-2-2s-2 .9-2 2 2 4 2 4m4 4H8m4-8V3m0 18v-3"></path>
          </svg>
        </span>
      </div>
    </div>

    <!-- Current Password Field -->
    <div class="field">
      <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="relative">
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200" %>
        <span class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm text-gray-500">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.1.9-2 2-2s2 .9 2 2-2 4-2 4m-4-4c0-1.1-.9-2-2-2s-2 .9-2 2 2 4 2 4m4 4H8m4-8V3m0 18v-3"></path>
          </svg>
        </span>
      </div>
      <p class="mt-1 text-sm text-gray-500 italic">We need your current password to confirm your changes</p>
    </div>

    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Update Profile", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200 font-medium" %>
    </div>
  <% end %>

  <!-- Cancel Account Section -->
  <div class="mt-8">
    <h3 class="text-lg font-semibold text-gray-800 mb-3">Cancel My Account</h3>
    <p class="text-gray-600 mb-3">Unhappy with us? We'll be sad to see you go.</p>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition duration-200 font-medium" %>
  </div>

  <!-- Back Link -->
  <div class="mt-4 text-center">
    <%= link_to "Back", :back, class: "text-blue-600 hover:text-blue-800 transition duration-200" %>
  </div>
</div>