<h1 class="text-2xl font-bold mb-4">User Management</h1>
<table class="w-full border">
  <thead>
    <tr class="bg-gray-200">
      <th class="p-2">Email</th>
      <th class="p-2">Role</th>
      <th class="p-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="border-t">
        <td class="p-2"><%= user.email %></td>
        <td class="p-2"><%= user.role %></td>
        <td class="p-2">
          <%= link_to 'Edit', edit_admin_user_path(user), class: 'text-blue-500 mr-2' %>
          <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>