<h1 class="text-2xl font-bold mb-4">Edit User</h1>
<%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email, class: 'border p-2 w-full mb-2' %>
  <%= f.label :role %>
  <%= f.select :role, %w[client admin], class: 'border p-2 w-full mb-2' %>
  <%= f.submit 'Update User', class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
<% end %>