<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Admin Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-2">Total Sessions</h2>
      <p class="text-3xl font-bold text-blue-600"><%= @total_sessions %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-2">Total Revenue</h2>
      <p class="text-3xl font-bold text-green-600"><%= number_to_currency(@total_revenue) %></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Upcoming Sessions</h2>
        <%= link_to 'View All', admin_sessions_path, class: 'text-blue-500 hover:text-blue-700' %>
      </div>

      <div class="space-y-4">
        <% @upcoming_sessions.each do |session| %>
          <div class="border-b pb-4 last:border-b-0 last:pb-0">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="font-medium text-gray-900"><%= session.title %></h3>
                <p class="text-sm text-gray-500">
                  <%= session.start_time.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <span class="<%= session_status_color(session) %> text-xs px-2 py-1 rounded">
                <%= session.status.titleize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Recent Payments</h2>
        <%= link_to 'View All', admin_payments_path, class: 'text-blue-500 hover:text-blue-700' %>
      </div>

      <div class="space-y-4">
        <% @recent_payments.each do |payment| %>
          <div class="border-b pb-4 last:border-b-0 last:pb-0">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="font-medium text-gray-900">
                  <%= payment.session.title %>
                </h3>
                <p class="text-sm text-gray-500">
                  <%= payment.paid_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <div class="text-right">
                <p class="font-medium text-green-600">
                  <%= number_to_currency(payment.amount) %>
                </p>
                <p class="text-xs text-gray-500">
                  <%= payment.card_brand.titleize %> ending in <%= payment.card_last4 %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
